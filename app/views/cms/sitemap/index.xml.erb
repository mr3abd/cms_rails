<% if @entries %>
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

    <% @entries.each do |entry| %>
        <url>
            <% entry.each do |key, value| %>
                <<%= key %>><%= value %></<%= key %>>
            <% end %>
        </url>
    <% end %>
</urlset>
<% else %>
   <%= raw @content %>
<% end %>